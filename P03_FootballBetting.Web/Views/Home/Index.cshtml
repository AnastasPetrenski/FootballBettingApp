@model P03_FootballBetting.Web.ViewModels.Homes.RegisterConnectionViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout_Test_Login.cshtml";
}

<div class="login">
    <form asp-action="Loged">
        <div id="username" action="/" method="post">
            <label asp-for="User">User</label>
            <input type="text" name="User" />
        </div>
        <div id="password" method="post">
            <label asp-for="Password">Pass</label>
            <input type="password" class="pw" name="Password" />
        </div>
        <div class="form-group">
            <input id="login" type="submit" value="Login" class="btn btn-info" /> |

            <a id="create" class="btn btn-success" asp-action="Register">Create</a>
        </div>
    </form>
</div>



