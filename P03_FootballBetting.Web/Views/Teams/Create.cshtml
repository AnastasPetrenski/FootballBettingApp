@model P03_FootballBetting.Web.ViewModels.Teams.CreateTeamViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Team</h1>

<div class="row">
    <div class="col-md-4">
        <form class="mx-auto half-width" asp-controller="Teams" asp-action="Create" method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" placeholder="Name..." name="Name"/>
            </div>
            <div class="form-group">
                <label for="LogoUrl">LogoUrl</label>
                <input type="text" class="form-control" id="LogoUrl" placeholder="Logo..." name="LogoUrl"/>
            </div>
            <div class="form-group">
                <label for="Initials" class="control-label">Initials</label>
                <input id="Initials" class="form-control" name="Initials"/>
            </div>
            <div class="form-group">
                <label for="Budget" class="control-label">Budget</label>
                <input type="number" id="Budget" class="form-control" name="Budget"/>
            </div>
            <div class="form-group">
                <label for="PrimaryKitColorId" class="control-label">PrimaryKitColor</label>
                <select id="PrimaryKitColorId" class ="form-control" name="PrimaryKitColorId">
                    @foreach (var item in Model.Colors)
                    {
                        <option value="@item.ColorId">@item.ColorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="SecondryKitColorId" class="control-label">SecondaryKitColor</label>
                <select for="SecondryKitColorId" class ="form-control" name="SecondaryKitColorId">
                    @foreach (var item in Model.Colors)
                    {
                        <option value="@item.ColorId">@item.ColorName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="TownId" class="control-label">Town</label>
                <select for="TownId" class ="form-control" name="TownId">
                    @foreach (var item in Model.Towns)
                    {
                        <option value="@item.TownId">@item.TownName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
