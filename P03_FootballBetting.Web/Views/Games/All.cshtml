@model IEnumerable<P03_FootballBetting.Web.ViewModels.Games.AllGamesViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All</h1>

<p>
    <a class="btn btn-success" type="submit" asp-action="Create">Create</a> |
    <a class="btn btn-info" type="submit" asp-action="Search">Search</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeamGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeamGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTime)
            </th>
            <th>
                Win
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AwayTeamBetRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrawBetRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeamGoals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeamGoals)
            </td>
            <td>
                @(item.DataTime.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeamBetRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeamBetRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrawBetRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
        </tr>
}
    </tbody>
</table>
